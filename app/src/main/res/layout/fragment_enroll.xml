<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layout_button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgView"
                android:layout_marginLeft="135dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                />

            <Button
                android:id="@+id/btnChoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose" />

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload" />




            <EditText
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:hint="First Name"></EditText>

            <EditText
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:hint="Last Name"></EditText>
            <EditText
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:hint="Gender">

            </EditText>

            <EditText
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Age"
                android:inputType="number"></EditText>

            <EditText
                android:id="@+id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:hint="Country"></EditText>

            <EditText
                android:id="@+id/textInputLayout6"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:hint="State"></EditText>

            <EditText
                android:id="@+id/textInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:hint="Town"></EditText>

            <EditText
                android:id="@+id/textInputLayout8"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:hint="Phone Number"
                android:inputType="phone"
                ></EditText>

            <EditText
                android:id="@+id/textInputLayout9"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:hint="Telephone Number"
                android:inputType="phone"></EditText>
            <Button
                android:id="@+id/user_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:text="ADD USER" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

